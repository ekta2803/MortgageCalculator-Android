<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/property_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:layout_marginTop="36dp"
        android:text="Property Type: "
        android:textSize="14sp" />

    <TextView
        android:id="@+id/property_type_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/property_type"
        android:layout_marginLeft="55dp"
        android:layout_marginStart="55dp"
        android:layout_toEndOf="@+id/property_type"
        android:layout_toRightOf="@+id/property_type"
        android:text="Housing"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/property_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Property Address"
        android:textSize="14sp"
        android:layout_below="@+id/property_type"
        android:layout_alignLeft="@+id/property_type"
        android:layout_alignStart="@+id/property_type" />

    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/property_addr"
        android:layout_alignStart="@+id/property_addr"
        android:layout_below="@+id/property_addr"
        android:layout_marginTop="27dp"
        android:text="City"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/property_addr_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="201 S 4th st"
        android:textSize="14sp"
        android:layout_alignBaseline="@+id/property_addr"
        android:layout_alignBottom="@+id/property_addr"
        android:layout_alignLeft="@+id/property_type_val"
        android:layout_alignStart="@+id/property_type_val" />

    <TextView
        android:id="@+id/city_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/property_addr_val"
        android:layout_alignStart="@+id/property_addr_val"
        android:layout_alignTop="@+id/city"
        android:text="San Jose"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/city"
        android:layout_alignStart="@+id/city"
        android:layout_below="@+id/city"
        android:layout_marginTop="20dp"
        android:text="State" />

    <TextView
        android:id="@+id/state_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/state"
        android:layout_alignEnd="@+id/city_val"
        android:layout_alignRight="@+id/city_val"
        android:text="California" />

    <TextView
        android:id="@+id/zipcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/state"
        android:layout_alignStart="@+id/state"
        android:layout_below="@+id/state"
        android:layout_marginTop="22dp"
        android:text="Zipcode" />

    <TextView
        android:id="@+id/zipcode_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="95112"
        android:layout_alignBaseline="@+id/zipcode"
        android:layout_alignBottom="@+id/zipcode"
        android:layout_alignLeft="@+id/city_val"
        android:layout_alignStart="@+id/city_val" />

    <TextView
        android:id="@+id/loan_amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/zipcode"
        android:layout_alignStart="@+id/zipcode"
        android:layout_below="@+id/zipcode"
        android:layout_marginTop="17dp"
        android:text="Loan Amount" />

    <TextView
        android:id="@+id/loan_amt_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/zipcode_val"
        android:layout_alignStart="@+id/zipcode_val"
        android:layout_alignTop="@+id/loan_amt"
        android:text="100000" />

    <TextView
        android:id="@+id/down_pmt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loan_amt"
        android:layout_alignStart="@+id/loan_amt"
        android:layout_below="@+id/loan_amt"
        android:layout_marginTop="15dp"
        android:text="Down Payment" />

    <TextView
        android:id="@+id/down_pmt_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/loan_amt_val"
        android:layout_alignStart="@+id/loan_amt_val"
        android:layout_alignTop="@+id/down_pmt"
        android:text="10000" />

    <TextView
        android:id="@+id/apr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/down_pmt"
        android:layout_alignStart="@+id/down_pmt"
        android:layout_below="@+id/down_pmt"
        android:layout_marginTop="18dp"
        android:text="APR" />

    <TextView
        android:id="@+id/apr_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.92"
        android:layout_above="@+id/term"
        android:layout_alignLeft="@+id/down_pmt_val"
        android:layout_alignStart="@+id/down_pmt_val" />

    <TextView
        android:id="@+id/term"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/apr"
        android:layout_alignStart="@+id/apr"
        android:layout_below="@+id/apr"
        android:layout_marginTop="18dp"
        android:text="Term" />

    <TextView
        android:id="@+id/term_val"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/down_pmt_val"
        android:layout_alignStart="@+id/down_pmt_val"
        android:layout_alignTop="@+id/term"
        android:text="30" />


</RelativeLayout>