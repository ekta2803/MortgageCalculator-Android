<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="15dp"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="330dp">


        <TextView
            android:id="@+id/property_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/textView3"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="11dp"
            android:text="Type: "
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/property_type_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/property_type"
            android:layout_alignBottom="@+id/property_type"
            android:layout_alignLeft="@+id/property_addr_val"
            android:layout_alignStart="@+id/property_addr_val"
            android:text="House"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/property_addr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/property_type"
            android:layout_alignStart="@+id/property_type"
            android:layout_below="@+id/property_type"
            android:layout_marginTop="6dp"
            android:text="Address :"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/property_addr_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/property_addr"
            android:layout_alignBottom="@+id/property_addr"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_toEndOf="@+id/property_addr"
            android:layout_toRightOf="@+id/property_addr"
            android:text="201 S 4th St"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/city_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/property_addr_val"
            android:layout_alignStart="@+id/property_addr_val"
            android:layout_below="@+id/property_addr_val"
            android:text="San Jose"
            android:textSize="14sp"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/state_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/city_val"
            android:layout_alignStart="@+id/city_val"
            android:layout_below="@+id/city_val"
            android:text="CA"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/zipcode_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/city_val"
            android:layout_toEndOf="@+id/textView3"
            android:layout_toRightOf="@+id/textView3"
            android:text="95112"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/loan_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/property_addr"
            android:layout_alignStart="@+id/property_addr"
            android:layout_below="@+id/textView5"
            android:layout_marginTop="10dp"
            android:text="Property Price"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/property_price_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/loan_amt"
            android:layout_alignBottom="@+id/loan_amt"
            android:layout_toEndOf="@+id/city_val"
            android:layout_toRightOf="@+id/city_val"
            android:text="$1,000,000.00"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/down_pmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/loan_amt"
            android:layout_alignStart="@+id/loan_amt"
            android:layout_below="@+id/loan_amt"
            android:layout_marginTop="6dp"
            android:text="Down Payment"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/down_pmt_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/property_price_val"
            android:layout_alignStart="@+id/property_price_val"
            android:layout_alignTop="@+id/down_pmt"
            android:text="$20,000.00"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/apr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/down_pmt"
            android:layout_alignStart="@+id/down_pmt"
            android:layout_below="@+id/down_pmt"
            android:layout_marginTop="6dp"
            android:text="APR"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/apr_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/term"
            android:layout_alignLeft="@+id/down_pmt_val"
            android:layout_alignStart="@+id/down_pmt_val"
            android:text="3.92%"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/term"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/apr"
            android:layout_alignStart="@+id/apr"
            android:layout_below="@+id/apr"
            android:layout_marginTop="6dp"
            android:text="Loan Term"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/term_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/down_pmt_val"
            android:layout_alignStart="@+id/down_pmt_val"
            android:layout_alignTop="@+id/term"
            android:text="30"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/mothly_pmt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/term"
            android:layout_alignStart="@+id/term"
            android:layout_below="@+id/term"
            android:layout_marginTop="6dp"
            android:text="Monthly Payment"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/monthly_pmt_val"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/mothly_pmt"
            android:layout_alignLeft="@+id/term_val"
            android:layout_alignStart="@+id/term_val"
            android:text="$2341.00"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="Property Info"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView3"
            android:layout_alignStart="@+id/textView3"
            android:layout_below="@+id/state_val"
            android:layout_marginTop="15dp"
            android:text="Loan Info"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/delete_prop"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignLeft="@+id/monthly_pmt_val"
            android:layout_alignStart="@+id/monthly_pmt_val"
            android:layout_below="@+id/monthly_pmt_val"
            android:layout_marginTop="11dp"
            android:text="Delete"
            android:textSize="10sp" />

        <Button
            android:id="@+id/edit_prop"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignTop="@+id/delete_prop"
            android:layout_toEndOf="@+id/property_type"
            android:layout_toRightOf="@+id/property_type"
            android:text="Edit"
            android:textSize="10sp" />


    </RelativeLayout>
</LinearLayout>
